<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/item_iv_voice"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_voice_play_ready"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:id="@+id/item_iv_playing"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_voice_playing"
        android:visibility="invisible"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/item_tv_voice_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20180517131501"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_toRightOf="@id/item_iv_voice"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/item_tv_voice_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:01"
        android:textColor="#8E8E8E"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/item_iv_voice"
        android:layout_below="@+id/item_tv_voice_name"
        android:layout_alignLeft="@+id/item_tv_voice_name"/>

    <TextView
        android:id="@+id/item_tv_voice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018/05/17/ 13:20:01"
        android:textColor="#8E8E8E"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/item_tv_voice_size"
        android:layout_below="@+id/item_tv_voice_name"
        android:layout_marginLeft="15dp"/>

</RelativeLayout>