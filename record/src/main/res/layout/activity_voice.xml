<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#189DAE">
        <ImageView
            android:id="@+id/iv_voice_list"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_voice_list"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tv_voice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_voice_list"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标准音质"
            android:textColor="#ffffff"
            android:layout_below="@+id/tv_voice_time"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv_voice_ready"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_voice_ready"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/iv_voice_recording"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_voice_recording"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>
    </RelativeLayout>

</LinearLayout>