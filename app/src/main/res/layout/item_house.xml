<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="100dp"
    android:background="@drawable/gridview_divider"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/item_tv_room_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="101ход"
            android:textColor="#000000"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_iv_icon_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_1"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/item_iv_icon_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/item_iv_icon_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_3"
                android:visibility="invisible" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_iv_icon_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_4"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/item_iv_icon_5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_5"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/item_iv_icon_6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_6"
                android:visibility="invisible" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>